{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    {
      "src": "^/(.*\\.(?:js|css|png|jpg|jpeg|svg|webp|gif|mp4|webm|mov|mp3|woff2|woff|json|ico))$",
      "dest": "/$1"
    },
    {
      "src": "(.*)",
      "dest": "/index.html"
    }
  ]
}

